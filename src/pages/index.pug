extends ../../build_modules/common


block body
    +space-container('Пример')
        +example-button({text: 'example text'})
        +example-button({text: 'disabled'})(disabled='')

    +space-container('Кнопка с обводкой')
        +button-with-arrow({text: 'Кнопка', style: 'withBorder'})
        +button-with-arrow({text: 'Кнопка', style: 'withBorder'})(disabled='')

    +space-container('Кнопка с заливкой (альтернативный вариант)')
        +button-with-arrow({text: 'Кнопка', style: 'withBackground'})
        +button-with-arrow({text: 'Кнопка', style: 'withBackground'})(disabled='')

    +space-container('Кнопка слайдера главной')
        div(style={display: 'flex', gap: '10px'})
            +main-slider-button({direction: 'left'})
            +main-slider-button({direction: 'right'})

        div(style={display: 'flex', gap: '10px'})
            +main-slider-button({direction: 'left'})(disabled='')
            +main-slider-button({direction: 'right'})(disabled='')
