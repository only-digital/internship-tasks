mixin slider__btn()
	button.slider__btn&attributes(attributes)
		<svg width="28" height="40" viewBox="0 0 28 40" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M28 37.3333L26.4614 40L-9.53674e-06 24L-7.62939e-06 16L3.02562 14.1705L3.02562 22.2222L28 37.3333Z" fill="currentColor"/>
			<path d="M26.4614 3.8147e-06L28 2.66666L5.96379 16V12.394L26.4614 3.8147e-06Z" fill="currentColor"/>
		</svg>

mixin slider-btns(props)
	.slider-btns&attributes(attributes)
		+slider__btn()(class="prev")(disabled="")
		+slider__btn()(class="next")
		span.slider__info #{props.current} / #{props.pages}