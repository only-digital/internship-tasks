mixin input-mail-ct(props)
    .input-mail-ct&attributes(attributes)
        span.input-mail-ct__name="E-mail"
        input.input-mail-ct__input( placeholder="E-mail" name="mail" maxlength="255")
        +svg("input-confirm-svg")(class="input-mail-ct__icon")
        span.input-mail-ct__alert-text="Недействительная почта"