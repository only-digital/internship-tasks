mixin spoiler-item(number, title, description)
    .spoiler-item&attributes(attributes)(data-component='spoiler-item')
        .spoiler-item__head
            .spoiler-item__head-title= number !== '' ? (number + '. ' + title) : title
            +svg('spoiler-icon').spoiler-item__head-icon
        .spoiler-item__desc= description
