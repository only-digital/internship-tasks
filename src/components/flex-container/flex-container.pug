- var arrowBlue = '../assets/images/arrowBlue.svg'
- var arrowGray = '../assets/images/arrowGray.svg'

mixin flex-container()
    section.flex-container
        h2.flex-container__title.
            #[p.colored Комплексные] &#160;предложения для мостостроения
        .flex-container__content
            .flex-container__row-1
                .flex-item 
                    .flex-item__card.gray 
                        .flex-card__title Мостовая сталь/Стальные конструкции мостов
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowRight")          
                .flex-item 
                    .flex-item__card.gray  
                        .flex-card__title Железобетонные конструкции мостов
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowRight")
                    .flex-item__card.gray  
                        .flex-card__title Дорожные ограждения барьерного типа
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowRight")
            .flex-container__row-2   
                .flex-item 
                    .flex-item__card.blue 
                        .flex-card__title Шпунтовой замок
                        .flex-card__arrow 
                            img(src=arrowGray, alt="arrowRight")          
                .flex-item 
                    .flex-item__card.gray  
                        .flex-card__title Мостовой крепеж
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowRight")
                .flex-item 
                    .flex-item__card.light-blue  
                        .flex-card__title Профили для деформационных швов
                        .flex-card__arrow 
                            img(src=arrowGray, alt="arrowRight")
                .flex-item 
                    .flex-item__card.gray  
                        .flex-card__title Плетеные габионы
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowBlue")
                .flex-item 
                    .flex-item__card.gray  
                        .flex-card__title Модульные мосты
                        .flex-card__arrow 
                            img(src=arrowBlue, alt="arrowBlue")
                                
                
            

