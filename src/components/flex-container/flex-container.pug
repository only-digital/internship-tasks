mixin flex-container()
	section.flex-container
		.title
			h1.title_content.title_content-red Комплексные&nbsp;
			h1.title_content предложения для мостостроения

		.main-block 
			.main-block_left
				h1 Мостовая сталь/Стальные конструкции мостов
				svg.icon
					include ../../assets/svg/arrow.svg
			.main-block_right
				.main-block_right_item
					h1 Железобетонные конструкции мостов
					svg.icon
						include ../../assets/svg/arrow.svg
				.main-block_right_item
					h1 Дорожные ограждения барьерного типа
					svg.icon
						include ../../assets/svg/arrow.svg
		.block
			.block-top
				.block-top_item.block-top_item-dark-blue
					h1 Шпунтовой замок
					svg.icon
						include ../../assets/svg/arrow.svg
				.block-top_item
					h1 Мостовой крепёж
					svg.icon
						include ../../assets/svg/arrow.svg
				.block-top_item.block-top_item-blue
					h1 Профили для <br/>деформационных швов
					svg.icon
						include ../../assets/svg/arrow.svg
			.block-bottom
				.block-bottom_item
					.block-bottom_item_title-left Плетёные габионы
					svg.icon
						include ../../assets/svg/arrow.svg
				.block-bottom_item
					.block-bottom_item_title-right Модульные мосты
					svg.icon
						include ../../assets/svg/arrow.svg
